<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:spinnerItemStyle">@style/spinner</item>
    </style>
    <style name="Botones_principales">
        <item name="android:textSize">20sp</item>
        <item name="android:background">#ff0</item>
        <item name="android:textColor">#990ff0</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="spinner">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Selecionar...</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
    </style>
    <style name="Ingreso_datos">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Mostrar_datos" parent="Ingreso_datos">
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="Mostrar_en_lista" parent="Ingreso_datos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#00ccff</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
